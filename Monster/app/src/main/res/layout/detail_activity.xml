<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="Fire Lion"
        android:textColor="@android:color/black"
        android:textSize="30dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="horizontal"
        android:layout_gravity="left">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oeufs :"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/fire_lion_0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type d'élément :"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Feu"
                android:textSize="20dp"/>
    </LinearLayout>

</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caractéristiques :"
        android:layout_marginBottom="8dp" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stat_life" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stat_power"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stat_speed"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/stat_stamina"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
        android:id="@+id/life"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/power"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:text="0"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/energy"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        android:text="0"
        android:textSize="20dp"/>


</LinearLayout>

   </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Evolutions :"
        android:layout_marginTop="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:onClick="ouefLion"
            android:background="@drawable/fire_lion_all_0"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:onClick="babyLion"
            android:background="@drawable/fire_lion_all_1"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:onClick="teenLion"
            android:background="@drawable/fire_lion_all_2"/>
        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:onClick="adultLion"
            android:background="@drawable/fire_lion_all_3"/>

    </LinearLayout>



</LinearLayout>

